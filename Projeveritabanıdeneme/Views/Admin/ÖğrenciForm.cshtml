@model Projeveritabanıdeneme.ViewModels.Danisman_UzmanlıkViewModel
@{
    ViewBag.Title = "ÖğrenciForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <h1>Öğrenci</h1>
    <h2>Kişisel Bilgiler</h2>
    @using (Html.BeginForm("Kaydet2", "Admin", FormMethod.Post))//HELPER METOT Hem ekleme hem güncelleme işlemi buradan oluyor.
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Öğrenci.Kullanıcı.TC_No)
            @Html.TextBoxFor(m => m.Öğrenci.Kullanıcı.TC_No, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Öğrenci_Ad)
            @Html.TextBoxFor(m => m.Öğrenci.Öğrenci_Ad, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Öğrenci.Öğrenci_Soyad)
            @Html.TextBoxFor(m => m.Öğrenci.Öğrenci_Soyad, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Öğrenci_Doğum_Tarihi)
            @Html.TextBoxFor(m => m.Öğrenci.Öğrenci_Doğum_Tarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Öğrenci_Doğum_Yeri)
            @Html.TextBoxFor(m => m.Öğrenci.Öğrenci_Doğum_Yeri, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Öğrenci_Uyruğu)
            @Html.TextBoxFor(m => m.Öğrenci.Öğrenci_Uyruğu, new { @class = "form-control" })
        </div>

        <h2>Akademik Bilgiler</h2>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Öğrenci_DUS_Puanı)
            @Html.TextBoxFor(m => m.Öğrenci.Öğrenci_DUS_Puanı, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Danışman_Id)
            @Html.DropDownListFor(m => m.Öğrenci.Danışman_Id, new SelectList(Model.Danışman, "Danışman_Id", "Danışman_Id"), "Alan Seçiniz", new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Uzmanlık_Id)
            @Html.DropDownListFor(m => m.Öğrenci.Uzmanlık_Id, new SelectList(Model.UzmanlıkAlanı, "Uzmanlık_Id", "Uzmanlık_Ad"), "Alan Seçiniz", new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Başlama_Tarihi)
            @Html.TextBoxFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Başlama_Tarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Tamamlama_Tarihi)
            @Html.TextBoxFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Tamamlama_Tarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        <h2>Kayıt Bilgileri</h2>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Kullanıcı.Kullanıcı_Adı)
            @Html.TextBoxFor(m => m.Öğrenci.Kullanıcı.Kullanıcı_Adı, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Kullanıcı.Mail)
            @Html.TextBoxFor(m => m.Öğrenci.Kullanıcı.Mail, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Kullanıcı.Tel)
            @Html.TextBoxFor(m => m.Öğrenci.Kullanıcı.Tel, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Kullanıcı.Rol)
            @Html.TextBoxFor(m => m.Öğrenci.Kullanıcı.Rol, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Öğrenci.Kullanıcı.Parola)
            @Html.TextBoxFor(m => m.Öğrenci.Kullanıcı.Parola, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m => m.Öğrenci.Öğrenci_Id)

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }
</div>
