@model Projeveritabanıdeneme.Models.EntityFramework.Kullanıcı
@{ Layout = null; }

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-3 align-content-center" >
        <div class="container">
            <h2>Lütfen Giriş Yapınız</h2>
            @ViewBag.Mesaj
            @using (Html.BeginForm("Login", "Security", FormMethod.Post))
            {
    <div class="form-group">
        @Html.LabelFor(m => m.Kullanıcı_Adı)
        @Html.TextBoxFor(m => m.Kullanıcı_Adı, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Parola)
                                        @Html.PasswordFor(m => m.Parola, new { @class = "form-control", placeholder = "Şifre" })
                                    </div>

                                                    <button class="btn btn-block btn-success">Giriş Yap</button>}


        </div>
        </div>
</body>
</html>


