@model Projeveritabanıdeneme.ViewModels.DanismanUzmanlıkController

@{
    ViewBag.Title = "DersKayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-3">
    
    <h2>Akademik Ders Ders</h2>

    @using (Html.BeginForm("Kaydet3", "Öğrenci", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Akademik_Ders_Öğrenci.Öğrenci.Öğrenci_Id)
            @Html.TextBoxFor(m => m.Akademik_Ders_Öğrenci.Öğrenci_Id, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Akademik_Ders_Öğrenci.Akademik_Ders_Id)
            @Html.DropDownListFor(m => m.Akademik_Ders_Öğrenci.Akademik_Ders_Id, new SelectList(Model.Akademikders, "Akademik_Ders_Id", "Ders_Tanımı"), "Ders Seçiniz", new { @class = "form-control" })
        </div>
      
        @Html.HiddenFor(m => m.Akademik_Ders_Öğrenci.Akademik_Ders_Öğrenci_Id);

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }

</div>
